<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_activity_main_circle_refresh_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circle refresh indicator" />

    <Button
        android:id="@+id/btn_activity_main_arrow_refresh_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Arrow refresh indicator" />

    <Button
        android:id="@+id/btn_activity_main_pull_from_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pull from bottom" />

    <Button
        android:id="@+id/btn_activity_main_webview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="With WebView (Pull from top)" />

    <Button
        android:id="@+id/btn_activity_main_webview_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="With WebView (Pull from bottom)" />

</LinearLayout>
